{
  "name": "nestjs-microservices",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "api-gateway",
    "user-service",
    "order-service",
    "product-service",
    "libs/common"
  ],
  "scripts": {
    "start:gateway": "cd api-gateway && yarn start",
    "start:user": "cd user-service && yarn start",
    "start:order": "cd order-service && yarn start",
    "start:product": "cd product-service && yarn start",
    "start:gateway:dev": "cd api-gateway && yarn start:dev",
    "start:user:dev": "cd user-service && yarn start:dev",
    "start:order:dev": "cd order-service && yarn start:dev",
    "start:product:dev": "cd product-service && yarn start:dev",
    "build:all": "yarn workspace api-gateway build && yarn workspace user-service build && yarn workspace order-service build && yarn workspace product-service build",
    "dev": "concurrently \"npm run start:gateway:dev\" \"npm run start:user:dev\" \"npm run start:order:dev\" \"npm run start:product:dev\""
  },
  "dependencies": {
    "@prisma/client": "^5.7.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prisma": "^5.7.1"
  }
}
